<Window x:Class="Hotel_Reservation.Quote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hotel_Reservation"
        mc:Ignorable="d"
        Title="Quote" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="lblPriceQuote" Content="Price Quote" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="43,226,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>
        <Button x:Name="btnContinue" Content="Continue" HorizontalAlignment="Left" Margin="169,226,0,0" VerticalAlignment="Top" Width="75" Click="btnContinue_Click"/>
        <TextBox x:Name="txtOutput" HorizontalAlignment="Left" Height="175" Margin="10,36,0,0" TextWrapping="Wrap" Text="Number of Nights: etc" VerticalAlignment="Top" Width="272"/>

    </Grid>
</Window>
